                </Border>

                <Border BorderBrush="Silver" BorderThickness="1" Opacity="0.5" Visibility="Collapsed">
                    <Image x:Name="overlap" Stretch="Uniform" Source="{Binding Main.Source1}" Opacity="1"/>
                </Border>

